    "version": "0.2.0",
    "configurations": [
        {
            "name": "curr",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "WANDB_MODE": "disabled",
                "CUDA_LAUNCH_BLOCKING": "1"
            },
        },
        {
            "name": "debug main.py",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": "metadata.tags=[debug] debug=True ${command:pickArgs}",
            "env": {
                "WANDB_MODE": "disabled",
                "CUDA_LAUNCH_BLOCKING": "1",
            },
        },
        {
            "name": "main.py",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": "metadata.tags=[debug] ${command:pickArgs}",
            "env": {},
        },
    ]
}
